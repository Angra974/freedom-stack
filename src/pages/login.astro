---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Login">
  <div
    class="container max-w-md prose !py-12 flex flex-col gap-6"
    x-data={`{
      email: '', 
      password: '', 
      get isValid() {
        if (this.email === '' || this.password === '') {
          return false;
        }

        return true;
      },
    }`}
  >
    <a class="w-fit btn btn-sm shadow-none" href="/">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width={16}
        height={16}
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-arrow-left"
      >
        <path d="m12 19-7-7 7-7"></path>
        <path d="M19 12H5"></path>
      </svg>
      Back
    </a>

    <div>
      <h1 class="!mb-2">Login</h1>
      <p class="m-0 text-muted">
        Or, <a class="link text-inherit" href="/sign-up">create an account</a>
      </p>
    </div>

    <form
      method="post"
      action="/api/login"
      class="not-prose flex flex-col gap-4"
    >
      <input
        class="input input-bordered bg-white"
        type="email"
        id="email"
        name="email"
        placeholder="Email"
        x-model="email"
      />
      <input
        class="input input-bordered bg-white"
        type="password"
        id="password"
        name="password"
        placeholder="Password"
        x-model="password"
      />

      <button class="btn mt-8 btn-primary" x-bind:disabled="!isValid">
        Login
      </button>
    </form>
  </div>
</Layout>
