---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Astwoah Stack">
  <main
    id="main"
    class="p-6 flex flex-col justify-center items-center gap-4"
    x-data="{ count: 0 }"
  >
    <div class="flex flex-col items-center">
      <h1 class="text-3xl font-bold">Astwoah Stack</h1>
      <p>AlpineJS Counter</p>
    </div>

    <div class="flex gap-2 items-center">
      <button class="btn btn-neutral" type="button" x-on:click="count--">
        -
      </button>
      <p x-text="count" class="min-w-[3ch] text-center font-mono"></p>
      <button class="btn btn-neutral" type="button" x-on:click="count++">
        +
      </button>
    </div>

    <a href="/posts" class="btn btn-neutral">
      Visit Blogs
    </a>

    {/* HTMX Example */}
    <button
      class="btn btn-primary"
      type="button"
      hx-get="/api/htmx-partials/rick-roll"
      hx-target="#main"
      hx-swap="beforeend"
    >
      Try HTMX
    </button>
  </main>
</Layout>
