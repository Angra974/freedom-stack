---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props as Props;
---

<div class="flex shrink-0">
  <slot class="shrink-0" name="icon" />
  <div class="ms-4">
    <h3 class="text-base sm:text-lg font-semibold text-gray-800">
      {title}
    </h3>
    <p class="mt-1 text-gray-60">
      {description}
    </p>
  </div>
</div>
